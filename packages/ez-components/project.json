{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/ez-components/src",
  "targets": {
    "build": {
      "executor": "@nx-plus/vue:browser",
      "options": {
        "dest": "dist/packages/ez-components",
        "index": "packages/ez-components/public/index.html",
        "main": "packages/ez-components/src/main.ts",
        "tsConfig": "packages/ez-components/tsconfig.app.json"
      },
      "configurations": {
        "production": {
          "mode": "production",
          "filenameHashing": true,
          "productionSourceMap": true,
          "css": {
            "extract": true,
            "sourceMap": false
          }
        }
      }
    },
    "serve": {
      "executor": "@nx-plus/vue:dev-server",
      "options": {
        "browserTarget": "ez-components:build"
      },
      "configurations": {
        "production": {
          "browserTarget": "ez-components:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ez-components/**/*.{ts,tsx,vue}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ez-components"],
      "options": {
        "jestConfig": "packages/ez-components/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
